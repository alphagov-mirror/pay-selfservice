{% extends "../layout-new.njk" %}

{% block pageTitle %}
  Platform admin - GOV.UK Pay
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row platform-admin">

        <div class="navigation govuk-grid-column-one-third">
                <ul class="govuk-list navigation">
                    <li {{ 'class="active"' if path == routes.admin.indexPlatformAdmin }}>
                        <a id="live-services" href="{{routes.admin.indexPlatformAdmin}}">Live services</a>
                    </li>
                    <li {{ 'class="active"' if path == routes.admin.indexPlatformAdminTrialServices }}>
                        <a id="trial-services" href="{{routes.admin.indexPlatformAdminTrialServices}}">Trial services</a>
                    </li>
                </ul>
        </div>

        <div class="govuk-grid-column-two-thirds">

              <h1 class="govuk-heading-l govuk-grid-column-two-thirds govuk-!-margin-bottom-3 service-count">
                  {% if showing_live_services %}
                    There are {{services.length}} live services
                  {% else %}
                    There are {{services.length}} trial services
                  {% endif %}
              </h1>


            {% if services.length > 0 %}
              <div>
                <div class="flex-grid--column-half tight">
                  <label class="govuk-label" for="service-filter">Find a service</label>
                  <div id="service-filter-container" class="autocomplete-container"></div>
                </div>
                <div class="flex-grid--column-half tight">
                  <button class="govuk-button--as-link govuk-!-margin-top-7" id="clear-filters">Clear filter</button>
                </div>
              </div>
            {% endif %}

            <div>
              {% for service in services %}
                {% if services.length > 0 %}
                  {% include "./_service_section_small.njk" %}
                {% endif %}
              {% endfor %}
            </div>

        </div>

    </div>

{% endblock %}
